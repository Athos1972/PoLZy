{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["src"]
  },
  "plugins": [
    "plugins/markdown",
    "better-docs/component",
    "better-docs/category"
  ],
  "templates": {
    "better-docs": {
      "name": "PoLZy front-end documentation"
    }
  },
  "opts": {
    "encoding": "utf8",
    "destination": "docs",
    "recurse": true,
    "readme": "README.md",
    "template": "./node_modules/better-docs"
  }
}